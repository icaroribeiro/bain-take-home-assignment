{
	"compilerOptions": {
		"target": "es2022",
		"moduleResolution": "Bundler",

		"allowJs": true,
		"jsx": "react",

		"strict": true,
		"esModuleInterop": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,

		"rootDir": ".",
		"baseUrl": "src",
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
